@model List<UserViewModel>
@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<a class="btn btn-outline-secondary my-3" asp-action="CreateOwner" asp-controller="Admin">+ Create Owner</a>
@if (Model.Count > 0)
{
    <div class="container">
        <div class="row">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>İsim</th>
                        <th>Kullanıcı Adı</th>
                        <th>Telefon</th>
                        <th>Email</th>
                        <th>Mağaza Adı</th>
                        <th></th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.FirstName @user.MiddleName @user.LastName</td>
                            <td>@user.Username</td>
                            <td>@user.PhoneNumber</td>
                            <td>@user.Email</td>
                            <td>@user.StoreName</td>
                            <td><a class="btn btn-outline-secondary">Edit</a>|<a class="btn btn-outline-secondary">Delete</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="container">
        <div class="p-3 text-secondary-emphasis bg-primary-subtle border border-primary-subtle rounded-3">
            Kayıtlı işletmeci bulunmamaktadır.
        </div>
    </div>
}

