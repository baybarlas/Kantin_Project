@model List<RoleViewModel>
@{
    ViewData["Title"] = "Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a class="btn btn-outline-secondary my-3" asp-action="CreateRole" asp-controller="Admin">+ Create Role</a>
@if(Model.Count > 0)
{
    <div class="container">
        <div class="row">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Role</th>
                        <th>Description</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var role in Model)
                    {
                        <tr>
                            <td>@role.Name</td>
                            <td>@role.Description</td>
                            <td><a class="btn btn-outline-secondary" asp-action="EditRole" asp-controller="Admin" asp-route-id="@role.Id">Edit</a>|<a class="btn btn-outline-secondary">Delete</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="container">
        <div class="p-3 text-secondary-emphasis bg-primary-subtle border border-primary-subtle rounded-3">
            Kayıtlı rol bulunmamaktadır.
        </div>
    </div>
}
