@model UserBillingInformationViewModel
@{
    ViewData["Title"] = "TopUp";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}


<div class="container">

    <div class="row">
        <div class="col-md-4 order-md-2 mb-4">
            <h4 class="d-flex justify-content-between align-items-center mb-3">
                <span class="text-muted">Bakiye Yükleme</span>
            </h4>
            <ul class="list-group mb-3">
                <li class="list-group-item d-flex justify-content-between lh-condensed">
                    <div>
                        <h6 class="my-0">Cüzdan Bakiyesi</h6>
                        <small class="text-muted">Bakiye ödemesi</small>
                    </div>
                    <span class="text-muted">@string.Format("{0:C2}",@ViewBag.Balance)</span>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                    <span>Toplam (TRY)</span>
                    <strong>@string.Format("{0:C2}",@ViewBag.Balance)</strong>
                </li>
            </ul>
        </div>
        <div class="col-md-8 order-md-1">
            <h4 class="mb-3">Fatura Bilgileri</h4>
            <form asp-action="TopUp" asp-controller="Parent" method="post">
                <input type="hidden" asp-for="TotalAmount" value="@ViewBag.Balance" />
                <input type="hidden" asp-for="username" value="@User.Identity.Name" />
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="FirstName"></label>
                        <input type="text" class="form-control" asp-for="FirstName" required>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="LastName"></label>
                        <input type="text" class="form-control" asp-for="LastName">
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Email"></label>
                    <input type="email" class="form-control" asp-for="Email">
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="mb-3">
                            <label asp-for="City"></label>
                            <input type="text" class="form-control" asp-for="City">
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="mb-3">
                            <label asp-for="Town"></label>
                            <input type="text" class="form-control" asp-for="Town">
                        </div>
                    </div>
                </div>
                <hr class="mb-4">

                <h4 class="mb-3">Ödeme Bilgileri</h4>

                <div class="d-block my-3">
                    <div class="custom-control custom-radio">
                        <input id="credit" name="paymentMethod" type="radio" class="custom-control-input" checked required>
                        <label class="custom-control-label" for="credit">Kredi Kartı</label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="cc-name">Kart Üzerindeki İsim</label>
                        <input type="text" class="form-control" id="cc-name" placeholder="" required>
                        <small class="text-muted">Kartın üzerinde görünen isim</small>
                        <div class="invalid-feedback">
                            Kart üzerindeki isim alanı zorunludur.
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="cc-number">Kredi Kartı Numarası</label>
                        <input type="text" class="form-control" id="cc-number" placeholder="" required>
                        <small class="text-muted">Kartın üzerindeki numara</small>
                        <div class="invalid-feedback">
                            Kredi kartı numarası zorunludur.
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <label for="cc-expiration">Son Kullanma Tarihi</label>
                        <input type="text" class="form-control" id="cc-expiration" placeholder="" required>
                        <div class="invalid-feedback">
                            Son kullanma tarihi alanı zorunludur.
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label for="cc-expiration">CVV</label>
                        <input type="text" class="form-control" id="cc-cvv" placeholder="" required>
                        <div class="invalid-feedback">
                            CVV Kodu zorunludur.
                        </div>
                    </div>
                </div>
                <hr class="mb-4">
                <button class="btn btn-primary btn-lg btn-block" type="submit">Ödemeyi Tamamla</button>
            </form>
        </div>
    </div>
</div>


